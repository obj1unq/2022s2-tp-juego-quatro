import wollok.game.*
import niveles.*

object sonido{
	var volumen = 1
	const pasoDelVolumen = 0.1
	
	method bajarVolumenA(musica){
		volumen = (volumen - pasoDelVolumen).max(0)
		musica.volume(volumen)
	}
	
	method subirVolumenA(musica){
		volumen = (volumen + pasoDelVolumen).min(1)
		musica.volume(volumen)
	}
}

program juego {
	const emkay = game.sound("emkay.ogg")
	emkay.shouldLoop(true)
	emkay.volume(0.5)
	keyboard.minusKey().onPressDo({sonido.bajarVolumenA(emkay)})
	keyboard.plusKey().onPressDo({sonido.subirVolumenA(emkay)})
	keyboard.p().onPressDo({emkay.pause()})
	keyboard.space().onPressDo({emkay.resume()})
	keyboard.s().onPressDo({emkay.stop()})
	game.schedule(100, {emkay.play()})
		
	game.title("Quatro")
	game.boardGround("tablero.png")
	game.width(40)
	game.height(24)
	game.cellSize(35)
	
	nivel1.iniciar()
	
	game.start()
}
